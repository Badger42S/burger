{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["*.css", "*.png"],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "require-jsdoc": "warn",
        "react/prop-types": 0,
        "no-invalid-this": "warn",
        "guard-for-in": "warn"
    }
}